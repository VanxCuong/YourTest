<% include header %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron text-center">
            <h1 class="display-3 ">Xem Dữ liệu</h1>
            <form action="<%=base_url%>page/<%= pageId.pageId %>" method="get">
              <div class="form-group">
                <input type="text" name="searchsp" id="" class="form-control search" placeholder="Tìm kiếm sản phẩm">
                <input type="submit" value="Search" class="btn btn-outline-success pull-right">
              </div>
            </form>
            <hr class="my-2">
          </div>
          <!-- jumbotron -->
          <% if(noMatch!==null){ %>
            <div class="col-md-12 text-center">
              <h3><%= noMatch %></h3>
            </div>
          <% } %>
          <div class="row">
            <% data.forEach(function(i){ %>
            <div class="col-md-4">
              <div class="card text-white bg-primary">
                <a href="<%= base_url %>chi-tiet/<%= i._id  %>"><img class="card-img-top" src="<%=base_url%>/images/<%= i.images %>" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title"><%= i.title %></h4>
                  <p class="card-text"><%= i.description %></p>
                </div>
                <div class="card-footer ">
                    <div class="left pull-left">
                      <a href="<%= base_url %>edit/<%= i._id %>"><i class="fa fa-pencil-square-o"> Sửa</i></a>
                    </div>
                    <div class="right pull-right">
                        <a href="<%= base_url %>delete/<%= i._id %>"><i class="fa fa-remove"> Xóa</i></a>
                      </div>
                  </div>
              </div>
              <!-- col-4 -->
            </div>
            <% }) %>
          </div>
        <!-- col:12 -->
      </div>
      <!-- row -->
      <div class="phantrang ">
          <% dem=pageId.pageId %>
          <nav aria-label="Page navigation">
            <ul class="pagination pagination-lg|sm">
              <% if(dem==1){ %>
              <li class="page-item">
                <a class="page-link hidden-xs-up" href="<%= base_url %>page/<%= --dem %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <% }else{ %>
              <li class="page-item">
                <a class="page-link" href="<%= base_url %>page/<%= --dem %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>

              <%}%>
              <% dem=pageId.pageId %>
              <% for(i=1;i<=page;i++){ %>
                  <% if(i==dem){ %>
                    <li class="page-item"><a class="page-link bg-success" href="<%=base_url%>page/<%= i %>"><%= i %></a></li>
                  <% }else{ %>
                      <li class="page-item"><a class="page-link" href="<%=base_url%>page/<%= i %>"><%= i %></a></li>
                  <% } %> 
              <% } %>
              
              <% if(dem==page){ %>
              <li class="page-item">
                <a class="page-link hidden-xs-up" href="<%= base_url %>page/<%= ++dem %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
              <% }else{ %>
                <li class="page-item">
                <a class="page-link" href="<%= base_url %>page/<%= ++dem %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <!-- phantrang -->
    </div>
    <!-- container -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  </body>
</html>
